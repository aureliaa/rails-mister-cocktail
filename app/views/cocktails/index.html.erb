<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://static1.villaschweppes.com/articles/4/32/01/4/@/220589-trois-des-cocktails-moleculaires-du-bar-article_top-3.jpg');">
  <div class="banner-content">
    <h1>Welcome to the cocktail page !</h1>
    <p>Learn to cocktail with us</p>
  </div>
</div>

<div class="container main-container text-center">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4 col-lg-3">
        <div class="card"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
          <div class="card-category">COCKTAILS</div>
            <div class="card-description"><%= link_to "#{cocktail.name}", cocktail_path(cocktail) %>
            </div>
        </div>
      </div>
    <% end %>
  </div>


<div class = "container text-center">
<%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary"%>
</div>




